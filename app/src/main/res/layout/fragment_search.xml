<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/margin_8dp"
    android:background="@color/black_151515">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp">

            <androidx.constraintlayout.widget.Group
                android:id="@+id/searchContentGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="search_movie, rv_movies"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/search_movie"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_56dp"
                android:layout_marginHorizontal="@dimen/margin_4dp"
                android:autofillHints="name"
                android:background="@drawable/bg_outlined"
                android:drawableEnd="@drawable/ic_baseline_search_24"
                android:drawableTint="@color/gray_BDBDBD"
                android:hint="@string/search_field"
                android:inputType="text"
                android:paddingStart="@dimen/padding_16dp"
                android:paddingEnd="@dimen/padding_16dp"
                android:textColor="@color/gray_BDBDBD"
                android:textColorHint="@color/gray_BDBDBD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="m" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_movies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_movie"
                app:spanCount="2"
                tools:itemCount="15"
                tools:listitem="@layout/item_movie" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/searchShimmerContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/shimmerMovieSearch"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:background="@drawable/bg_shimmer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/shimmerMovieGenres1"
                        android:layout_width="180dp"
                        android:layout_height="260dp"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:background="@drawable/bg_shimmer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/shimmerMovieSearch" />

                    <View
                        android:id="@+id/shimmerMovieGenres2"
                        android:layout_width="180dp"
                        android:layout_height="260dp"
                        android:layout_marginEnd="@dimen/margin_8dp"
                        android:background="@drawable/bg_shimmer"
                        app:layout_constraintBottom_toBottomOf="@+id/shimmerMovieGenres1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/shimmerMovieGenres1" />

                    <View
                        android:id="@+id/shimmerMovieGenres3"
                        android:layout_width="180dp"
                        android:layout_height="260dp"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:background="@drawable/bg_shimmer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/shimmerMovieGenres2" />

                    <View
                        android:id="@+id/shimmerMovieGenres4"
                        android:layout_width="180dp"
                        android:layout_height="260dp"
                        android:layout_marginEnd="@dimen/margin_8dp"
                        android:background="@drawable/bg_shimmer"
                        app:layout_constraintBottom_toBottomOf="@+id/shimmerMovieGenres3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/shimmerMovieGenres3" />

                    <View
                        android:id="@+id/shimmerMovieGenres5"
                        android:layout_width="180dp"
                        android:layout_height="260dp"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:background="@drawable/bg_shimmer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/shimmerMovieGenres4" />

                    <View
                        android:id="@+id/shimmerMovieGenres6"
                        android:layout_width="180dp"
                        android:layout_height="260dp"
                        android:layout_marginEnd="@dimen/margin_8dp"
                        android:background="@drawable/bg_shimmer"
                        app:layout_constraintBottom_toBottomOf="@+id/shimmerMovieGenres5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/shimmerMovieGenres5" />

                    <View
                        android:id="@+id/shimmerMovieGenres7"
                        android:layout_width="180dp"
                        android:layout_height="260dp"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:background="@drawable/bg_shimmer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/shimmerMovieGenres6" />

                    <View
                        android:id="@+id/shimmerMovieGenres8"
                        android:layout_width="180dp"
                        android:layout_height="260dp"
                        android:layout_marginEnd="@dimen/margin_8dp"
                        android:background="@drawable/bg_shimmer"
                        app:layout_constraintBottom_toBottomOf="@+id/shimmerMovieGenres7"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/shimmerMovieGenres7" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>