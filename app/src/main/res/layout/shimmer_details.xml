<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmerDetailsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/shimmerPoster"
                android:layout_width="match_parent"
                android:layout_height="444dp"
                android:background="@color/gray_757575"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/shimmerMovieContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:paddingTop="@dimen/padding_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shimmerPoster">

                <View
                    android:id="@+id/shimmerPlay"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/shimmerDownload"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/margin_8dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintBottom_toBottomOf="@+id/shimmerPlay"
                    app:layout_constraintEnd_toStartOf="@id/shimmerAddToMyList"
                    app:layout_constraintTop_toTopOf="@+id/shimmerPlay" />

                <View
                    android:id="@+id/shimmerAddToMyList"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintBottom_toBottomOf="@+id/shimmerPlay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/shimmerPlay" />

                <View
                    android:id="@+id/shimmerGenres1"
                    android:layout_width="64dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shimmerPlay" />

                <View
                    android:id="@+id/shimmerGenres2"
                    android:layout_width="64dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_marginStart="@dimen/margin_8dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintStart_toEndOf="@+id/shimmerGenres1"
                    app:layout_constraintTop_toBottomOf="@+id/shimmerPlay" />

                <View
                    android:id="@+id/shimmerGenres3"
                    android:layout_width="64dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_marginStart="@dimen/margin_8dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintStart_toEndOf="@+id/shimmerGenres2"
                    app:layout_constraintTop_toBottomOf="@+id/shimmerPlay" />

                <View
                    android:id="@+id/shimmerOverview"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:background="@drawable/bg_shimmer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shimmerGenres1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/shimmerSimilarMovieLabel"
                android:layout_width="94dp"
                android:layout_height="18dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:background="@drawable/bg_shimmer"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shimmerMovieContainer" />

            <View
                android:id="@+id/shimmerMovieGenres1"
                android:layout_width="128dp"
                android:layout_height="192dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:background="@drawable/bg_shimmer"
                app:layout_constraintStart_toStartOf="@+id/shimmerSimilarMovieLabel"
                app:layout_constraintTop_toBottomOf="@+id/shimmerSimilarMovieLabel"/>

            <View
                android:id="@+id/shimmerMovieGenres2"
                android:layout_width="128dp"
                android:layout_height="192dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginStart="@dimen/margin_8dp"
                android:background="@drawable/bg_shimmer"
                app:layout_constraintStart_toEndOf="@+id/shimmerMovieGenres1"
                app:layout_constraintTop_toBottomOf="@+id/shimmerSimilarMovieLabel" />

            <View
                android:id="@+id/shimmerMovieGenres3"
                android:layout_width="128dp"
                android:layout_height="192dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginStart="@dimen/margin_8dp"
                android:background="@drawable/bg_shimmer"
                app:layout_constraintStart_toEndOf="@+id/shimmerMovieGenres2"
                app:layout_constraintTop_toBottomOf="@+id/shimmerSimilarMovieLabel" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>